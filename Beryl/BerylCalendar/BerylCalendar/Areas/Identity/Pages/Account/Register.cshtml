@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<body style="background-color:lightgrey">
    <div class="row">
        <div class="col-md-4 acc_creat">
            <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <h4>Create a new account with us.</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.UserName"></label>
                    <input asp-for="Input.UserName" class="form-control" />
                    <span asp-validation-for="Input.UserName" class="text-danger"></span>
                </div>
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.ConfirmPassword"></label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Register</button>
            </form>
        </div>
        <div class="col logo">
            <div id=blurb>
                <p id=text>
                    powered by <br>
                    Team Blackberry
                </p>
            </div>
            <img src="/images/BlackberryLogo.jpg" height=auto id=logo alt="Team Blackberry Logo: Three 'blackberries' in a triangular formation where 1 is in front and the other 2 are behind and slightly above the leading one.">
        </div>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>