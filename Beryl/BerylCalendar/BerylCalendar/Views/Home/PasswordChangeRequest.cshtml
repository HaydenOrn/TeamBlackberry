<div>
    <h4>Enter your email address, <br> and we will send a link to change your password.</h4>
    @using (Html.BeginForm("PasswordChangeRequest", "Home"))
    {
        <div class="input-group mb-3 ">
            <input type="text" name="emailForPass" class="form-control" />
            <input type="submit" value="Send" class="btn btn-primary" />
        </div>
        <small id="Email" class="form-text text-muted">
            EX: example@site.com
        </small>
    }
</div>